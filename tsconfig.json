{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "jsx": "react-native",
    /* Visit https://aka.ms/tsconfig.json to read more about this file */

    /* Completeness */
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@*": ["./src/*"],
      "@Components/*": [ "./src/Components/*" ],
      "@Constants/*": [ "./src/Constants/*" ],
      "@Navigation/*": [ "./src/Navigation/*" ],
      "@Services/*": [ "./src/Services/*" ],
      "@Zustand/*": [ "./src/Zustand/*" ],

      "@api/*": [
        "src/api/*"
      ],
      "@assets/*": [
        "src/assets/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@scenes/*": [
        "src/scenes/*"
      ],
      "@theme/*": [
        "src/theme/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
    } 
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
